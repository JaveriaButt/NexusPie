<UserControl x:Class="NPIE.Screen.Item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NPIE.Screen" xmlns:Control="clr-namespace:NPIE.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border CornerRadius="20" BorderThickness="02" BorderBrush="LightYellow" >
            <Border.Effect>
                <DropShadowEffect Color="IndianRed"></DropShadowEffect>
            </Border.Effect>
            <Control:NPButtons Style="{StaticResource ProductButton}"></Control:NPButtons>
        </Border>
            
    </Grid>
</UserControl>
