                        <Image Source="{Binding Source={StaticResource AppViewModel},Path=ApplicationDesign.BtnMinimizeAppImg,UpdateSourceTrigger=PropertyChanged}" RenderOptions.BitmapScalingMode="HighQuality"/>                                                                                                                                                
                    </Button>                                                                                                                                                                                                                                                                                                                                     
