    <Border Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" Direction="0" RenderingBias="Performance" ShadowDepth="1"/>
        </Border.Effect>
        <Grid Margin="0,0,0,0" Background="White">
            <Grid.RowDefinitions>
