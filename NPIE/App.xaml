<Application x:Class="NPIE.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:NPIE"
             xmlns:Controller="clr-namespace:NPIE.Controller"
             xmlns:Converters="clr-namespace:NPIE.Convertors"
             StartupUri="MainWindow.xaml">
    <Application.Resources >
        <ResourceDictionary>
            <Controller:HomeController x:Key="AppViewModel"/>

            <Converters:ScreenConvertor x:Key="ConvertToScreen"/>
            
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary  Source="DesignResource.xaml" />
            </ResourceDictionary.MergedDictionaries> 
        </ResourceDictionary> 
    </Application.Resources>
</Application>
